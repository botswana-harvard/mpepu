<VirtualHost *:80>

	#Redirect / http://192.168.1.49/maikalelo_offline.html?

        ServerAdmin webmaster@localhost

        ErrorLog /var/log/apache2/django-maikalelo-error.log

        LogLevel warn

        CustomLog /var/log/apache2/django-maikalelo-access.log combined

        Alias /media/ /home/django/source/bhp062/media/
        <Directory "/home/django/source/bhp062/media/" >
          Order deny,allow
          Allow from all
        </Directory>

        Alias /sitestatic/ /home/django/source/bhp062/sitestatic/        
        <Directory "/home/django/source/bhp062/sitestatic/" >
          Order deny,allow
          Allow from all
        </Directory>

        Alias /static/ /home/django/source/bhp062/static/
        <Directory "/home/django/source/bhp062/static/" >
          Order deny,allow
          Allow from all
        </Directory>

        WSGIScriptAlias / /home/django/source/bhp062/apache/django.wsgi

        <Directory "/home/django/source/bhp062/apache/" >
          Order deny,allow
          Allow from all
        </Directory>

</VirtualHost>

